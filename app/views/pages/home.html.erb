<div class="container py-5 text-center">
  <h1 class="header">Find out how to <span class="green-highlight">recycle</span></h1>
  <p class="head-text">Search for a specific product based on where you live.</p>
</div>
<div class="container col-6">
  <!-- find out how to replace word search with icon -->
  <!-- controller if this value buscar  -->
  <div class="justify-content-between w-400">
    <%= form_tag products_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Coke can or 54657678948"
    %>
    <%= text_field_tag :zipcode,
      params[:zipcode],
      class: "form-control",
      placeholder: "123456"
    %>
    <%= submit_tag "Search", class: "btn-filled" %>
    <% end %>
  </div>
</div>
<div class="container text-center home-image">
  <%= cl_image_tag("undraw_takeout_boxes",
      width: 800) %>
</div>
<div class="container-fluid bg-gray">
  <div class="container py-5 text-center">
    <h3 class="home-heading">Products by <span class="green-highlight">material type</span></h3>
  </div>
  <div class="container pb-5">
    <div class="cards">
      <div class="card-category">
        Plastic
      </div>
      <div class="card-category">
        Glass
      </div>
      <div class="card-category">
        Paper
      </div>
    </div>
  </div>
</div>
