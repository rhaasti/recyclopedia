<div class="alert alert-info alert-dismissible fade show m-1 d-none" role="alert" id="flash-info">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="alert alert-warning alert-dismissible fade show m-1 d-none" role="alert" id="flash-alert">
  <%= alert %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="container-fluid bg-light mt-1 py-5 new-list-container">
  <div class="d-flex align-items-center justify-content-center ">
        <div class="form-product-field text-center form-cage mr-5">
          <h4 class="pb-1">Name your new <span class="green-highlight">list</span></h4>
          <%= simple_form_for([@list], remote: true) do |t| %>
            <%= t.input :name, label: false %>
            <div class="d-flex align-items-center justify-content-center">
            <%= t.button :submit, class: "btn-filled" %>
          <% end %>
            <%= link_to "Cancel", products_path, class:"btn-terciary ml-3" %>
          </div>
        </div>

    <div class="pl-5">
      <%= cl_image_tag("new_list_illustration", width: 350) %>
    </div>
  </div>
</div>



