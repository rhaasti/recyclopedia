<div class="alert alert-info alert-dismissible fade show m-1 d-none" role="alert" id="flash-info">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="alert alert-warning alert-dismissible fade show m-1 d-none" role="alert" id="flash-alert">
  <%= alert %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<div class="container p-5">
  <div class="d-flex align-items-end justify-content-center">
    <div class="px-1">
      <div class="d-flex">
        <div class="form-product-field">
        <h3> name your new <span class="green-highlight">list</span></h3>

      <%= simple_form_for([@list], remote: true) do |t| %>
        <%= t.input :name, label: false %>
        <%= t.button :submit, class: "btn-filled" %>
      <% end %>
    </div>

</div>
  <div class="mr-5 pt-5">
    <%= cl_image_tag("recycle.svg") %>
  </div>
</div>
</div>
</div>
