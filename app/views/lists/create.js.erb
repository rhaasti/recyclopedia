
if ("<%=flash[:alert] %>") {
  document.querySelector("#flash-alert").innerText = "<%= flash[:alert] %>";
  document.querySelector("#flash-alert").classList.remove("d-none");
}

if ("<%=flash[:notice] %>") {
  document.querySelector("#flash-alert").innerText = "<%= flash[:notice] %>";
  document.querySelector("#flash-alert").classList.remove("d-none");
}
