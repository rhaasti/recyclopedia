
var btnBookmark = document.querySelector("#btn-bookmark<%=@product.id%>");

if (btnBookmark){
  btnBookmark.classList.remove('far');
  btnBookmark.classList.add('fas');
};

if ("<%=flash[:alert] %>") {
  document.querySelector("#flash-alert").innerText = "<%= flash[:alert] %>";
  document.querySelector("#flash-alert").classList.remove("d-none");
};

if ("<%=flash[:notice] %>") {
  console.log("bookmark!")
  document.querySelector("#flash-alert").innerText = "<%= flash[:notice] %>";
  document.querySelector("#flash-alert").classList.remove("d-none");
  document.querySelector("#closeModal<%=@product.id%>").click();
  console.log("modal!")
};


