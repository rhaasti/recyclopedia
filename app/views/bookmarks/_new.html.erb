
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Save product to a list</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

      <%= simple_form_for([@product, @list, @bookmark], remote: true) do |f| %>
        <%= f.association :list, label: 'Select a list' %>
        <%= f.hidden_field :zipcode, value: params[:zipcode] %>
        <div class="form-actions text-center">
          <%= f.button :submit, class: "btn-filled" %>
         </div>
      <% end %>

      </div>
      <div class="modal-footer text-center">
        <%=  button_to "+ Create a new list", new_list_path, :method => :get, :class=> "btn-terciary" %>
      </div>
    </div>
  </div>
</div>
