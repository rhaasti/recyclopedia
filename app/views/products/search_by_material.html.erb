<div class="container py-5">
  <h3 class="py-5"> <%= @products.count %> relevant products </h3>

  <div class="product-grid">
    <!-- CARDS START -->
    <% @products.each do |product|%>

        <div class="card-product">
          <%= cl_image_tag product.photo.key, crop: :fill %>

          <div class="wrap-info">
            <div class="product-description">
              <h6> <%= product.description %> </h6>
            </div>
            <div class="card-product-info ">
                <p>Curbside âœ“</p>
            </div>
          </div>

          <%= form_tag show_from_zipcode_products_path, method: :get do %>
            <!-- STARTS ZIP CODE FIELD -->
            <div class="px-1 form-zip">
              <label class="">Enter ZIP Code</label>
              <!-- missing required keys: [:id] -->
              <%= text_field_tag :zipcode, params[:zipcode] %>
            </div>
            <!-- ENDS ZIP CODE FIELD -->

            <!-- STARTS BUTTON -->
            <div class="px-1">
              <%= submit_tag "Search", class: "btn-filled" %>
            </div>
            <!-- ENDS BUTTON -->
          <% end %>

        </div>
    <% end %>
    <!-- CARDS END -->
  </div>


  <div class="py-5">
    <%= link_to "Back to home", root_path, class:"btn-terciary" %>
  </div>

</div>

