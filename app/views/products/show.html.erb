<div class="container">
  <div class="title-box">
    <h3><%= @product.description %></h3>
    <%= render "bookmarks/new" %>
    <div class="btn-terciary">
      Bookmark
      <i class="fas fa-bookmark" data-toggle="modal" data-target="#exampleModal"></i>
    </div>
  </div>

  <hr>

  <div class="product-card">
    <%= cl_image_tag @product.photo.key, crop: :fill, class: "image" %>
    <div class="product-info">
      <h4>Material description</h4>
        <p>
        <% @product.product_materials.each do |product|%>
        <li><%= product.material.description %> â€” <%= product.material.long_description %></li>
        <% end %>
        </p>
       <% family_description = [] %>
        <div class="tags">
          <% @product.product_materials.each do |product|%>
            <% product.material.material_material_families.each do |family| %>
              <% family_description.push(family.material_family.description) %>
            <% end %>
          <% end %>
       <% family_description = family_description.uniq %>
            <% family_description.each do |description| %>
               <button class="tag"><i class="fas fa-tag pr-2"></i><%= description %></button>
            <% end %>
        </div>
        <div class="additional-product-info">
          <div class="upc">
          <h4>UPC</h4>
          <p><%= @product.UPC %></p>
          </div>
          <div class="size">
          <h4>Size</h4>
          <p><%= @product.size %></p>
          </div>
        </div>
    </div>
  </div>

</div>

<div class="map-box">
  <h3 class="text-center my-5">Local recycling locations</h3>
  <div id="map"
    style="width: 100%; height: 500px;"
    class="container"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="container py-5">
    <%= link_to "Back to products", products_path, class:"btn-terciary" %>
    <!-- <i class="fas fa-arrow-left"></i> -->
  </div>
</div>






