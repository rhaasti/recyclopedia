<div class="container">
  <div class="title-box">
    <h3><%= @product.description %></h3>
    <%= link_to bookmarks_path, class:"" do%>
      <i class="fas fa-bookmark"></i>
    <% end %>
  </div>

  <hr>

  <div class="product-card">
    <%= cl_image_tag @product.photo, crop: :fill, class: "image" %>
    <div class="product-info">
      <h4>Material description</h4>
        <p>
        <% @product.product_materials.each do |product|%>
        <li><%= product.material.description %> â€” <%= product.material.long_description %></li>
        <% end %>
        </p>
        <div class="tags">
          <button class="tag"><i class="fas fa-tag pr-2"></i>Tag</button>
          <button class="tag"><i class="fas fa-tag pr-2"></i>Tag</button>
        </div>
        <div class="additional-product-info">
          <div class="upc">
          <h4>UPC</h4>
          <p><%= @product.UPC %></p>
          </div>
          <div class="size">
          <h4>Size</h4>
          <p><%= @product.size %></p>
          </div>
        </div>
    </div>
  </div>

</div>
  
<div class="map-box">
  <h3 class="text-center my-5">Local recycling locations</h3>
  <div id="map"
    style="width: 100%; height: 500px;"
    class="container"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="py-5">
    <%= link_to "Back to products", products_path, class:"btn-terciary" %>
    <!-- <i class="fas fa-arrow-left"></i> -->
  </div>
</div>






